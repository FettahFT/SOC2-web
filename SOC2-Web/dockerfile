# Build stage
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

# Copy project files
COPY ["SOC2-Web/ShadeOfColor2.API/ShadeOfColor2.API.csproj", "ShadeOfColor2.API/"]
COPY ["SOC2-Web/SOC2-web.Core/SOC2-web.Core.csproj", "SOC2-web.Core/"]
COPY ["SOC2-Web/SOC2-web.sln", "./"]

# Restore packages
RUN dotnet restore "ShadeOfColor2.API/ShadeOfColor2.API.csproj"

# Copy everything else
COPY SOC2-Web/ .

# Publish
RUN dotnet publish "ShadeOfColor2.API/ShadeOfColor2.API.csproj" \
    -c Release \
    -o /app/publish

# Runtime stage
FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS runtime
WORKDIR /app

# Install native dependencies for ImageSharp if needed
RUN apt-get update && apt-get install -y \
    libgdiplus \
    && rm -rf /var/lib/apt/lists/*

COPY --from=build /app/publish .
EXPOSE 80
ENV ASPNETCORE_URLS=http://+:80

ENTRYPOINT ["dotnet", "ShadeOfColor2.API.dll"]